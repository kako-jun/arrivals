{
  "mcpServers": {
    "playwright": {
      "command": "node",
      "args": ["${HOME}/.config/mcp-servers/playwright/index.js"],
      "env": {}
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "."
      ]
    }
  }
}
