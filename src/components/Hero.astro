---
import type { Locale } from '@/lib';
import { ASSET_DIMENSIONS } from '@/lib';
import LocaleNav from './LocaleNav.astro';

interface Props {
  iconSrc: string;
  name: string;
  tagline?: string;
  locales: Locale[];
  currentLocale: Locale;
  localeLabels: Record<Locale, string>;
  basePath: string;
  app: string;
}

const { iconSrc, name, tagline, locales, currentLocale, localeLabels, basePath, app } = Astro.props;
const iconSize = ASSET_DIMENSIONS.icon;
---

<header class="hero fade-in">
  <img
    class="icon"
    src={iconSrc}
    alt=""
    width={iconSize.width}
    height={iconSize.height}
    decoding="async"
  />
  <h1>{name}</h1>
  {tagline && <p class="tagline">{tagline}</p>}
  <LocaleNav
    locales={locales}
    currentLocale={currentLocale}
    localeLabels={localeLabels}
    basePath={basePath}
    app={app}
  />
</header>
