---
import { ASSET_DIMENSIONS } from '@/lib';

interface Props {
  iconSrc: string;
  name: string;
  tagline?: string;
  locales: string[];
  currentLocale: string;
  localeLabels: Record<string, string>;
  basePath: string;
  app: string;
}

const { iconSrc, name, tagline, locales, currentLocale, localeLabels, basePath, app } = Astro.props;
const iconSize = ASSET_DIMENSIONS.icon;
---

<header class="hero fade-in">
  <img
    class="icon"
    src={iconSrc}
    alt=""
    width={iconSize.width}
    height={iconSize.height}
    decoding="async"
  />
  <h1>{name}</h1>
  {tagline && <p class="tagline">{tagline}</p>}
  {
    locales.length > 1 && (
      <nav class="lang" aria-label="Language">
        {locales.map((l) => (
          <a
            href={`${basePath}${app}/${l}/`}
            aria-current={l === currentLocale ? 'page' : undefined}
            class:list={[{ current: l === currentLocale }]}
          >
            {localeLabels[l] ?? l}
          </a>
        ))}
      </nav>
    )
  }
</header>
