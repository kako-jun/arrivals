---
import type { Voice } from '@/lib';

interface Props {
  voices: Voice[];
  maxCount?: number;
}

const { voices, maxCount = 3 } = Astro.props;
const displayVoices = voices.slice(0, maxCount);
---

{
  displayVoices.length > 0 && (
    <section class="voices fade-in" aria-label="Reviews">
      {displayVoices.map((v) => (
        <blockquote>
          <p class="voice-text">"{v.text}"</p>
          {v.by && <cite>â€” {v.by}</cite>}
        </blockquote>
      ))}
    </section>
  )
}
