---
import type { Locale } from '@/lib';
import { CTA_TEXT } from '@/lib';
import ExternalLink from './ExternalLink.astro';

interface Props {
  href: string;
  locale: string;
}

const { href, locale } = Astro.props;
const text = CTA_TEXT[locale as Locale] ?? CTA_TEXT.en;
---

<div class="cta fade-in">
  <ExternalLink href={href} class="cta-button">
    {text}
  </ExternalLink>
</div>
